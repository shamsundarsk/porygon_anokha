# Database - REPLACE WITH YOUR ACTUAL DATABASE URL
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# JWT Secrets - GENERATE NEW SECRETS FOR PRODUCTION
JWT_SECRET="REPLACE_WITH_32_CHAR_SECRET_GENERATED_BY_CRYPTO"
JWT_REFRESH_SECRET="REPLACE_WITH_32_CHAR_REFRESH_SECRET_GENERATED_BY_CRYPTO"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Encryption Key - GENERATE NEW KEY FOR PRODUCTION
ENCRYPTION_KEY="REPLACE_WITH_64_CHAR_HEX_ENCRYPTION_KEY"

# Server Configuration
PORT=5004
NODE_ENV="development"

# Redis for Rate Limiting - REPLACE WITH YOUR REDIS URL
REDIS_URL="redis://localhost:6379"

# CORS - REPLACE WITH YOUR ACTUAL DOMAINS
ALLOWED_ORIGINS="http://localhost:3005,http://localhost:19006"

# Maps API Keys - REPLACE WITH YOUR ACTUAL KEYS
MAPMYINDIA_API_KEY="your-mapmyindia-api-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# Payment Gateway - REPLACE WITH YOUR ACTUAL KEYS
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
RAZORPAY_WEBHOOK_SECRET="your-razorpay-webhook-secret"

# SMS & Communication - REPLACE WITH YOUR ACTUAL CREDENTIALS
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Email Configuration - REPLACE WITH YOUR ACTUAL SMTP SETTINGS
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@domain.com"
SMTP_PASS="your-app-password"

# File Upload
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Voice
SPEECH_API_KEY="your-speech-api-key"

# Security Configuration
BCRYPT_ROUNDS=14
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=1800000
AUDIT_LOG_LEVEL="info"

# Advanced Cryptographic Security Configuration
# Master key for cryptographic operations (64 hex chars = 256 bits)
CRYPTO_MASTER_KEY="REPLACE_WITH_64_CHAR_HEX_MASTER_KEY_FOR_CRYPTO_OPERATIONS"

# Key storage encryption key (64 hex chars = 256 bits)
KEY_STORAGE_MASTER_KEY="REPLACE_WITH_64_CHAR_HEX_KEY_FOR_ENCRYPTING_STORED_KEYS"

# Key storage path (absolute path recommended for production)
KEY_STORE_PATH="./keys"

# HSM Configuration (Hardware Security Module)
HSM_ENABLED=false
HSM_PROVIDER="mock"

# AWS CloudHSM Configuration (if using AWS HSM)
AWS_CLOUDHSM_CLUSTER_ID="cluster-xxxxxxxxx"
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# Azure HSM Configuration (if using Azure HSM)
AZURE_KEY_VAULT_URL="https://your-vault.vault.azure.net/"
AZURE_RESOURCE_GROUP="your-resource-group"
AZURE_HSM_NAME="your-hsm-name"
AZURE_CLIENT_ID="your-azure-client-id"
AZURE_CLIENT_SECRET="your-azure-client-secret"
AZURE_TENANT_ID="your-azure-tenant-id"

# PKCS#11 HSM Configuration (if using PKCS#11 compatible HSM)
PKCS11_LIBRARY_PATH="/usr/lib/pkcs11/your-hsm-library.so"
PKCS11_SLOT_ID=0
PKCS11_PIN="your-hsm-pin"

# Security Service Configuration
SECURITY_SELF_TEST=true
HSM_FALLBACK_ENABLED=false
SECURITY_LOG_LEVEL="info"
MAX_CRYPTO_OPERATIONS=100
CRYPTO_OPERATION_TIMEOUT=30000

# IMPORTANT SECURITY NOTES:
# 1. NEVER commit this file to version control
# 2. Generate new secrets for each environment (dev/staging/prod)
# 3. Use environment-specific secret management in production
# 4. Rotate secrets regularly (every 90 days)
# 5. Use strong, unique passwords for all services
# 6. Generate cryptographic keys using secure random generators
# 7. Store HSM credentials securely and separately from application code
# 8. Enable HSM in production for maximum security
# 9. Test HSM connectivity before deploying to production
# 10. Monitor key rotation and HSM health continuously